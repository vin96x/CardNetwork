<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vincently.cardnetwork.GoFish">

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/player_go_fish"
        android:layout_alignTop="@+id/rank_go_fish"
        android:layout_toLeftOf="@+id/fish_button"
        android:layout_toStartOf="@+id/fish_button"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rank_go_fish"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fish_button"
        android:layout_toEndOf="@+id/fish_button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FISH!"
        android:id="@+id/fish_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Go Fish"
        android:id="@+id/go_fish_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_fish_hand"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/fish_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_fish_points"
        android:text="Your Books:"
        android:layout_above="@+id/go_fish_turn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn: Player"
        android:id="@+id/go_fish_turn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/go_fish_gameover"
        android:layout_below="@+id/go_fish_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:id="@+id/tv1"
        android:layout_above="@+id/player_go_fish"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Value"
        android:id="@+id/tv2"
        android:layout_above="@+id/rank_go_fish"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Their Books:"
        android:id="@+id/go_fish_points_o"
        android:layout_above="@+id/go_fish_points"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pile_size"
        android:layout_above="@+id/fish_button"
        android:layout_centerHorizontal="true"
        android:text="Pile:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_fish_msg"
        android:layout_below="@+id/go_fish_gameover"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
